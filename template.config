 ##### Server options #####
[server]

# The name of this node
name = charlie

# TCP-port of this node
tcpPort = 1337

# Desination of Unix-socket
unixSocket = /tmp/bithorde

##### Storage options #####
[storage]

# Valid root-directories for linked assets. BitHorde needs write-access to the 
# provided root directories, where it creates a directory ".bh_meta". Multiple
# directories can be added by repeating the directive
linkroot = /tmp/a
linkroot = /tmp/b
